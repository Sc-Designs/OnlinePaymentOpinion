<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/android-chrome-512x512.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/docs.css">
    <title>Docs</title>
</head>
<body>
  <!-- TODO:navbar -->
  <div class="w-full h-16 px-5 fixed z-20">
    <div class="h-full w-full flex justify-between items-center">
      <div class="w-fit h-fit px-2 flex items-center"><span class="text-orange-500 text-4xl font-semibold">S</span><span class="text-white text-5xl font-semibold drop-shadow-lg">S</span><span class="text-green-500 text-4xl font-semibold">S</span></div>
      <div class="w-[30%] h-full flex justify-around items-center ">
        <a href="/" class="link text-center  text-white w-24  text-[1.3vw] hover:font-semibold"><span class="relative z-10 link-text">Home</span></a>
        <a href="/about" class="link text-center  text-white w-24  text-[1.3vw] hover:font-semibold"><span class="relative z-10 link-text">About</span></a>
        <a href="/docs" class="first-link text-center  text-white w-24  text-[1.3vw] hover:font-semibold"><span class="relative z-10 text-black">Docs</span></a>
        <a href="/contact" class="link text-center  text-white w-24  text-[1.3vw] font-semibold"><span class="relative z-10 link-text">Contact</span></a>
      </div>
    </div>
  </div>
  <div class="fixed h-screen w-full">
    <img class="w-full h-full brightness-50" src="/images/docsBackground.jpg" alt="">
  </div>
  <div class="w-full min-h-screen pb-5">
    <h1 class="fixed top-[50%] left-[50%] -translate-x-[50%] -translate-y-[50%] z-[1] text-[19vw] text-zinc-400 font-semibold pointer-events-none font-['Colonna_MT'] -rotate-12 whitespace-nowrap opacity-20 tracking-widest brightness-150">-Opinion-</h1>
    <div class="w-full pt-20 px-5 relative z-[2]">
   <% posts.forEach(function(elem){ %>
  <div class="w-fit px-4 py-2 mb-2 rounded-lg" style="background-color: #ffffff21; backdrop-filter: blur(15px);">
    <div class="w-fit h-fit flex gap-2 items-center mb-2">
      <h1 class="font-semibold text-xl text-white capitalize italic pb-1">@<%= elem.user.username %></h1>
    </div>
    <h5 class="text-zinc-200 font-semibold italic mb-2 text-sm"><%= elem.date %></h5>
    <h1 class="tracking-wide text-white text-lg font-semibold text-justify"><%= elem.text %></h1>
  </div>
<% }) %>
    <div class="fixed bottom-6 right-6">
        <a href="/profile" class="bg-green-500 text-white px-2 py-2 text-lg rounded-lg">Add Your Opinion</a>
    </div>
  </div>
    </div>
    
</body>
</html>
